---
import Layout from '@/layouts/Layout.astro';
import { TypicalityBiasExplainer } from '@/components/interactives';
import { DiversityGainsVisual, PostTrainingVisual, USStatesDemo } from '@/components/evidence';
---

<Layout title="VS Evidence Visualizations">
  <main class="max-w-6xl mx-auto py-12 px-4">
    <h1 class="text-4xl font-bold mb-8">VS Paper Evidence Visualizations</h1>

    <div class="space-y-12">
      <!-- Each component in its own section without HR elements -->
      <section class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Typicality Bias Interactive</h2>
        <TypicalityBiasExplainer client:idle />
      </section>

      <section class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Diversity Gains</h2>
        <DiversityGainsVisual client:idle showAll={true} />
      </section>

      <section class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Post-Training Retention</h2>
        <PostTrainingVisual client:idle />
      </section>

      <section class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">US States Distribution</h2>
        <USStatesDemo client:idle />
      </section>
    </div>
  </main>
</Layout>